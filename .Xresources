! Xft settings ---------------------------------------------------------------

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! sxiv
Sxiv.font: FiraCode-Regular:size=8
Sxiv.foreground: #ffffff
Sxiv.background: #232627

! xterm
xterm*termName: xterm-256color
xterm*loginShell: true
xterm*vt100*geometry: 90x34
xterm*saveLines: 2000
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
XTerm.vt100.faceName: DejaVu Sans Mono:style=Book:antialias=false
XTerm.vt100.faceNameDoublesize: WenQuanYi WenQuanYi Bitmap Song
XTerm.vt100.faceSize: 8
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.translations: #override \n\
    Ctrl <Key>M: maximize() \n\
    Ctrl <Key>R: restore()
XTerm.vt100.scrollBar: false
!Breeze theme ----------------------------------------------------------------

#define t_background		#31363b
#define t_current_line		#fcfcfc
#define t_selection      	#eff0f1
#define t_foreground      	#eff0f1
#define t_comment	     	#999999
#define t_red		     	#ed1515
#define t_orange	     	#f67400
#define t_yellow        	#fdbc4b
#define t_green	        	#11d116
#define t_aqua	        	#1abc9c
#define t_blue	        	#1d99f3
#define t_purple        	#9b59b6

*.foreground:   t_foreground
*.background:   t_background
*.cursorColor:  #fcfcfc

! Black / Grey
*.color0:       #31363b
*.color8:       #7f8c8d

! Red / Bright Red
*.color1:       t_red
*.color9:       #c0392b

! Green + Bright Green
*.color2:       t_green
*.color10:      #1cdc9a

! Yellow (Orange) + Bright Yellow (Yellow)
*.color3:       t_orange
*.color11:      t_yellow

! Blue + Bright Blue
*.color4:       t_blue
*.color12:      #3daee9

! Magenta (Purple) + Bright Magenta
*.color5:       t_purple
*.color13:      #8e44ad

! Cyan (Aqua) + Bright Cyan
*.color6:       t_aqua
*.color14:      #16a085

! Light Grey (Selection) + White (Current Line)
*.color7:       t_selection
*.color15:	t_current_line

! x11-ssh-askpass
x11-ssh-askpass*font:                   FiraCode-Regular:size=8
x11-ssh-askpass*background:             #315975
x11-ssh-askpass*foreground:             #e8e8e8
x11-ssh-askpass.Button*background:      #55a5f6
x11-ssh-askpass.Indicator*foreground:   #55a5f6
x11-ssh-askpass.Indicator*background:   #2b303b
x11-ssh-askpass*topShadowColor:         #315975
x11-ssh-askpass*bottomShadowColor:      #315975
x11-ssh-askpass.*borderWidth:           0
